<h2><%= t('views.device.registrations.change_password_title') %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put },
               data: { turbo: false }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="col-md-4 mt-4">
      <%= f.label :password, t('views.device.registrations.new_password'), class: "fw-bold" %>
      <% if @minimum_password_length %>
        <em>(<%= t('no_less')%> <%= @minimum_password_length %> <%= t('symbols') %>)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="col-md-4 fw-bold mt-3">
      <%= f.label :password_confirmation, class: "fw-bold"  %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="col-md-4 mt-3">
      <%= f.label :current_password, t('views.device.registrations.current_password'), class: "fw-bold" %>
      <i>(<%= t('needed_for_changes') %>)</i>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
    </div>

    <div class="my-3">
      <%= f.submit t('views.device.registrations.change_password'), class: "btn btn-success" %>
    </div>
  <% end %>

  <h3 class="mt-4"><%= t('views.device.registrations.delete_account') %></h3>

  <p><%= button_to t('views.buttons.delete'), registration_path(resource_name),
                            form: { data: { turbo_confirm: I18n.t('confirm_delete_account') } },
                            method: :delete, class: "btn btn-danger" %></p>

  <%= link_to t('views.links.back'), :back %>
