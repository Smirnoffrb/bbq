<h2><%= t('views.forgot.title') %></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post },
               data: { turbo: false }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="col-md-8 col-lg-3 fw-bold mt-3">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="my-3">
    <%= f.submit t('views.device.passwords.recover_password'), class: "btn btn-success" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
