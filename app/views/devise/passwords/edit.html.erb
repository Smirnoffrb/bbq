<h2><%= t('views.device.passwords.change_your_password') %></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.label :password, t('views.device.passwords.new_password') %><br />
    <% if @minimum_password_length %>
      <em>(<%= t('minimum')%>  <%= @minimum_password_length %> <%= t('characters')%>)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, t('views.device.passwords.confirm_new_password') %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
  </div>

  <div class="actions my-4">
    <%= f.submit t('views.device.passwords.change_my_password'), class: 'btn btn-primary' %>
  </div>
<% end %>
<%= render "devise/shared/links" %>