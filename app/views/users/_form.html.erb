<%= form_for @user, html: {multipart: true}, data: { turbo: false } do |f| %>
  <%= render partial: 'partials/form_errors', locals: {model: @user} %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.text_field :email, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :avatar %>
    <%= f.file_field :avatar, class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit t('views.buttons.save'), class: 'btn btn-primary' %>
    или <%= link_to t('views.buttons.back'), :back %>
  </div>
<% end %>
